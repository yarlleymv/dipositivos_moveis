<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_212121212"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="sans-serif"
       android:text="SENHA"
       android:textColor="#03A9F4"
       android:textSize="24sp"
       app:layout_constraintBottom_toTopOf="@+id/editTextTextadmin123"
       app:layout_constraintStart_toStartOf="@+id/editTextTextadmin123"
       tools:fontFamily="sans-serif-light"
       tools:textStyle="bold" />

   <TextView
       android:id="@+id/textView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="sans-serif"
       android:text="LOGIN"
       android:textColor="#2196F3"
       android:textSize="24sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toTopOf="@+id/editTextUsuario"
       app:layout_constraintStart_toStartOf="@+id/editTextUsuario"
       tools:fontFamily="sans-serif-light" />

   <EditText
       android:id="@+id/editTextUsuario"
       android:layout_width="280dp"
       android:layout_height="45dp"
       android:ems="10"
       android:inputType="text"
       android:text="Digite seu email"
       android:textAppearance="@style/TextAppearance.AppCompat.Body2"
       android:textColor="#7E7E7E"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.511"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.392" />

   <EditText
       android:id="@+id/editTextTextadmin123"
       android:layout_width="279dp"
       android:layout_height="45dp"
       android:ems="10"
       android:hint="Digite sua senha"
       android:inputType="textPassword"
       android:textAppearance="@style/TextAppearance.AppCompat.Body2"
       android:textColor="#7E7E7E"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.507"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.565" />

   <Button
       android:id="@+id/button2"
       android:layout_width="132dp"
       android:layout_height="55dp"
       android:backgroundTint="#2196F3"
       android:text="ENTRAR"
       android:textSize="20sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.498"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.711" />

</androidx.constraintlayout.widget.ConstraintLayout>